{
  "manifest_version": 3,
  "name": "ApplyForge- Job Application Tracker",
  "version": "1.0",
  "description": "Motivational job application tracking with daily goals and networking features.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/job-tracker-icon-2.png",
      "48": "assets/job-tracker-icon-2.png",
      "128": "assets/job-tracker-icon-2.png"
    }
  }
}
